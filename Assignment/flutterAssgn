import 'package:flutter/material.dart';
import 'dart:math' as math;

class _MusicPlayerPageState extends State<MusicPlayerPage> 
    with SingleTickerProviderStateMixin {
  // ...existing code...

  // Add new controller for rotation animation
  late AnimationController _rotationController;
  
  @override
  void initState() {
    super.initState();
    _rotationController = AnimationController(
      duration: const Duration(seconds: 10),
      vsync: this,
    )..repeat();
  }

  @override
  void dispose() {
    _rotationController.dispose();
    super.dispose();
  }

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      // ...existing AppBar code...
      
      body: Container(
        decoration: BoxDecoration(
          gradient: LinearGradient(
            begin: Alignment.topLeft,
            end: Alignment.bottomRight,
            colors: [
              Colors.purple.shade900,
              Colors.blue.shade900,
              Colors.black,
            ],
          ),
        ),
        child: Column(
          children: [
            // Enhanced Audio Visualizer
            ShaderMask(
              shaderCallback: (bounds) => LinearGradient(
                colors: [Colors.purple.shade300, Colors.blue.shade300],
              ).createShader(bounds),
              child: SizedBox(
                height: 100,
                child: Row(
                  mainAxisAlignment: MainAxisAlignment.spaceEvenly,
                  children: List.generate(
                    20,
                    (index) => AnimatedContainer(
                      duration: Duration(milliseconds: 600 + index * 50),
                      width: 4,
                      height: isPlaying ? math.Random().nextDouble() * 60 + 20 : 20,
                      decoration: BoxDecoration(
                        color: Colors.white,
                        borderRadius: BorderRadius.circular(5),
                      ),
                    ),
                  ),
                ),
              ),
            ),
            
            Expanded(
              child: Center(
                child: Column(
                  mainAxisAlignment: MainAxisAlignment.center,
                  children: [
                    // Rotating Album Art
                    AnimatedBuilder(
                      animation: _rotationController,
                      builder: (_, child) => Transform.rotate(
                        angle: _rotationController.value * 2 * math.pi,
                        child: Container(
                          width: 250,
                          height: 250,
                          decoration: BoxDecoration(
                            shape: BoxShape.circle,
                            boxShadow: [
                              BoxShadow(
                                color: Colors.purple.withOpacity(0.5),
                                blurRadius: 30,
                                spreadRadius: 5,
                              ),
                            ],
                          ),
                          child: ClipOval(
                            child: Image.network(
                              'https://picsum.photos/250',
                              fit: BoxFit.cover,
                            ),
                          ),
                        ),
                      ),
                    ),
                    
                    // Song Info with Gradient Text
                    const SizedBox(height: 40),
                    ShaderMask(
                      shaderCallback: (bounds) => LinearGradient(
                        colors: [Colors.purple.shade300, Colors.blue.shade300],
                      ).createShader(bounds),
                      child: const Text(
                        'Awesome Song',
                        style: TextStyle(
                          fontSize: 28,
                          fontWeight: FontWeight.bold,
                          color: Colors.white,
                        ),
                      ),
                    ),
                  ],
                ),
              ),
            ),

            // Enhanced Now Playing Bar
            ClipRRect(
              borderRadius: const BorderRadius.vertical(top: Radius.circular(30)),
              child: BackdropFilter(
                filter: ImageFilter.blur(sigmaX: 10, sigmaY: 10),
                child: Container(
                  padding: const EdgeInsets.all(16),
                  decoration: BoxDecoration(
                    color: Colors.white.withOpacity(0.1),
                  ),
                  child: Row(
                    mainAxisAlignment: MainAxisAlignment.spaceAround,
                    children: [
                      _buildIconButton(Icons.shuffle),
                      _buildIconButton(Icons.repeat),
                      _buildIconButton(Icons.favorite_border),
                      _buildIconButton(Icons.playlist_add),
                    ],
                  ),
                ),
              ),
            ),
          ],
        ),
      ),
    );
  }

  Widget _buildIconButton(IconData icon) {
    return IconButton(
      icon: Icon(icon),
      color: Colors.white,
      onPressed: () {
        // Add haptic feedback
        HapticFeedback.lightImpact();
      },
    );
  }
}