/* main.js
   - Responsible for site-wide interactivity:
     * responsive nav toggle
     * image slider (simple carousel)
   - Functions include parameters, returns and are commented for clarity
*/

/* -------------------------
   Utility: select helper
   ------------------------- */
const $ = (sel) => document.querySelector(sel);

/* -------------------------
   Nav toggle: show/hide mobile menu
   ------------------------- */
/**
 * toggleNav
 * toggles the .open class on the nav list associated with a toggle button
 * @param {HTMLElement} button - the toggle button
 * @param {HTMLElement} menu - the menu element to open/close
 */
function toggleNav(button, menu) {
  const expanded = button.getAttribute('aria-expanded') === 'true';
  button.setAttribute('aria-expanded', String(!expanded));
  menu.classList.toggle('open');
}

/* wire nav buttons on all pages (multiple IDs used across pages) */
document.addEventListener('DOMContentLoaded', () => {
  const pairs = [
    {btn:'#navToggle', menu:'#mainMenu'},
    {btn:'#navToggleAbout', menu:'#menuAbout'},
    {btn:'#navToggleContact', menu:'#menuContact'}
  ];
  pairs.forEach(p => {
    const b = document.querySelector(p.btn);
    const m = document.querySelector(p.menu);
    if (b && m) b.addEventListener('click', () => toggleNav(b, m));
  });

  /* -------------------------
     Slider implementation
     - Basic carousel: moves transform on .slides
     - Accessible controls for prev/next
     ------------------------- */
  const slider = document.getElementById('mainSlider');
  if (!slider) return;

  const slidesEl = slider.querySelector('.slides');
  const imgs = Array.from(slidesEl.children);
  let index = 0;
  let width = slider.clientWidth;
  let autoplayId = null;
  const prevBtn = slider.querySelector('.slider-prev');
  const nextBtn = slider.querySelector('.slider-next');

  // compute translateX for current index
  function updateSlider() {
    width = slider.clientWidth;
    slidesEl.style.transform = `translateX(-${index * width}px)`;
    // set aria-live announcement (optional approach)
    const imgsVisible = imgs[index];
    imgsVisible && imgsVisible.classList.add('slide-in');
    // remove class after animation
    setTimeout(() => imgsVisible && imgsVisible.classList.remove('slide-in'), 500);
  }

  function next() {
    index = (index + 1) % imgs.length;
    updateSlider();
  }
  function prev() {
    index = (index - 1 + imgs.length) % imgs.length;
    updateSlider();
  }

  // attach buttons
  prevBtn && prevBtn.addEventListener('click', prev);
  nextBtn && nextBtn.addEventListener('click', next);

  // autoplay
  function startAutoplay() {
    if (autoplayId) clearInterval(autoplayId);
    autoplayId = setInterval(next, 4000);
  }
  function stopAutoplay() {
    if (autoplayId) clearInterval(autoplayId);
    autoplayId = null;
  }

  slider.addEventListener('mouseenter', stopAutoplay);
  slider.addEventListener('mouseleave', startAutoplay);

  // responsive: recalc on resize
  window.addEventListener('resize', updateSlider);

  // init
  updateSlider();
  startAutoplay();
});

/* contact.js
   - Handles custom form validation and feedback for contact.html
   - Demonstrates scope, parameters, return values, and DOM updates
*/

/**
 * validateContactForm
 * @param {Object} values - object of form values {name,email,subject,message}
 * @returns {Array} errors - array of error strings (empty if valid)
 */
function validateContactForm(values) {
  const errors = [];
  if (!values.name || values.name.trim().length < 2) errors.push('Please enter your full name.');
  const emailRe = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
  if (!values.email || !emailRe.test(values.email)) errors.push('Please enter a valid email address.');
  if (!values.subject || values.subject.trim().length < 3) errors.push('Subject must be at least 3 characters.');
  if (!values.message || values.message.trim().length < 10) errors.push('Message must be at least 10 characters.');
  return errors;
}

/* wire form events after DOM ready */
document.addEventListener('DOMContentLoaded', () => {
  const form = document.getElementById('contactForm');
  const feedback = document.getElementById('contactFeedback');

  if (!form) return;

  form.addEventListener('submit', (e) => {
    e.preventDefault();
    const values = {
      name: form.name.value,
      email: form.email.value,
      subject: form.subject.value,
      message: form.message.value
    };

    const errors = validateContactForm(values);
    if (errors.length) {
      feedback.innerHTML = errors.map(err => `<div class="error">${err}</div>`).join('');
      return;
    }

    // simulate "send" and persist message to localStorage (demo)
    const messages = JSON.parse(localStorage.getItem('aurora_messages') || '[]');
    messages.push({ ...values, time: new Date().toISOString() });
    localStorage.setItem('aurora_messages', JSON.stringify(messages));

    feedback.innerHTML = `<div class="success">Message sent. Thank you, ${values.name}.</div>`;
    form.reset();
  });
});

