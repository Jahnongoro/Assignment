  bool isPlaying = false;
  late AnimationController _controller;
  final List<String> playlist = [
    'Awesome Song',
    'Cool Beats',
    'Summer Vibes',
    'Midnight Jazz',
  ];

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(
        title: const Text('ðŸŽµ Groove Music'),
