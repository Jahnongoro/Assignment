  <script>
    // Populate max date for DOB (must be at least 13 years old)
    (function setDobMax(){
      const dob = document.getElementById('dob');
      const today = new Date();
      today.setFullYear(today.getFullYear() - 13);
      dob.max = today.toISOString().split('T')[0];
    })();

    const form = document.getElementById('enhancedForm');
    const resultsBody = document.getElementById('resultsBody');
    const formMessage = document.getElementById('formMessage');
    const discountRange = document.getElementById('discountRange');
    const discountOutput = document.getElementById('discountOutput');

    if (discountRange && discountOutput) {
      discountOutput.value = discountRange.value;
      discountRange.addEventListener('input', () => discountOutput.textContent = discountRange.value);
    }

    form.addEventListener('submit', (e) => {
      e.preventDefault();
      if (!form.checkValidity()) {
        form.reportValidity();
        formMessage.textContent = 'Please fix the highlighted fields.';
        formMessage.className = 'error';
        return;
      }

      const pwd = form.password.value;
      const conf = form.confirmPassword.value;
      if (pwd !== conf) {
        formMessage.textContent = 'Passwords do not match.';
        formMessage.className = 'error';
        form.confirmPassword.focus();
        return;
      }

      const now = new Date().toLocaleString();
      const row = document.createElement('tr');
      row.innerHTML = `<td>${now}</td>
                       <td>${escapeHtml(form.fullName.value)}</td>
                       <td><a href="mailto:${escapeHtml(form.email.value)}">${escapeHtml(form.email.value)}</a></td>
                       <td>${escapeHtml(form.product.value)}</td>
                       <td>${escapeHtml(form.quantity.value)}</td>`;
      if (resultsBody.children.length === 1 && resultsBody.children[0].children.length === 1) {
        resultsBody.innerHTML = '';
      }
      resultsBody.prepend(row);

      formMessage.textContent = 'Order submitted successfully.';
      formMessage.className = 'success';

      form.fileUpload.value = '';
      form.reset();
    });

    function escapeHtml(str) {
      return String(str).replace(/[&<>"']/g, s => ({'&':'&amp;','<':'&lt;','>':'&gt;','"':'&quot;',"'":'&#39;'}[s]));
    }
  </script>
</body>
