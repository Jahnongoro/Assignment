        <fieldset>
          <legend>Account Security</legend>
          <div class="row">
            <div class="col">
              <label for="password">Password</label>
              <input id="password" name="password" type="password" required minlength="8" placeholder="At least 8 characters" autocomplete="new-password" />
            </div>
            <div class="col">
              <label for="confirmPassword">Confirm password</label>
              <input id="confirmPassword" name="confirmPassword" type="password" required autocomplete="new-password" />
            </div>
          </div>
          <div class="hint">Passwords must match. The form will validate on submit.</div>
        </fieldset>

        <div class="row controls">
          <button type="submit">Submit order</button>
          <button type="reset">Reset</button>
          <div id="formMessage" aria-live="polite" class="message" ></div>
        </div>
      </form>

      <section aria-labelledby="results-heading" class="results">
