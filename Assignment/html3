  <main>
    <section class="container" aria-labelledby="form-heading">
      <h2 id="form-heading">Registration & Order Form</h2>

      <form id="enhancedForm" novalidate>
        <fieldset>
          <legend>Personal Information</legend>
          <div class="row">
            <div class="col">
              <label for="fullName">Full name</label>
              <input id="fullName" name="fullName" type="text" placeholder="Jane Doe" required autocomplete="name" minlength="2" />
              <div class="hint" id="nameHint">Enter your first and last name.</div>
            </div>

            <div class="col">
              <label for="email">Email</label>
              <input id="email" name="email" type="email" placeholder="name@example.com" required autocomplete="email" />
            </div>
          </div>

          <div class="row">
            <div class="col">
              <label for="username">Username</label>
              <input id="username" name="username" type="text" placeholder="user_123" required pattern="^[A-Za-z0-9_]{3,20}$" autocomplete="username" minlength="3" maxlength="20" aria-describedby="usernameHint" />
              <div id="usernameHint" class="hint">3–20 characters: letters, numbers, underscore.</div>
            </div>

            <div class="col">
              <label for="phone">Phone</label>
              <input id="phone" name="phone" type="tel" placeholder="+1234567890" required pattern="^\+?\d{7,15}$" autocomplete="tel" />
            </div>
          </div>

          <div class="row">
            <div class="col">
              <label for="dob">Date of birth</label>
              <input id="dob" name="dob" type="date" required max="" />
            </div>

            <div class="col">
              <label for="timePref">Preferred contact time</label>
              <input id="timePref" name="timePref" type="time" />
            </div>
          </div>
        </fieldset>

        <fieldset>
          <legend>Order Details</legend>

          <div class="row">
            <div class="col">
              <label for="product">Product</label>
              <select id="product" name="product" required>
                <option value="">Choose a product...</option>
                <option value="starter">Starter Pack</option>
                <option value="pro">Pro Pack</option>
                <option value="enterprise">Enterprise</option>
              </select>
            </div>

            <div class="col">
              <label for="quantity">Quantity</label>
              <input id="quantity" name="quantity" type="number" min="1" max="100" value="1" required />
            </div>
          </div>

          <div class="row">
            <div class="col">
              <label for="unitPrice">Unit price (readonly)</label>
              <input id="unitPrice" name="unitPrice" type="text" value="$49.00" readonly aria-readonly="true" />
            </div>

            <div class="col">
              <label for="discountRange">Discount level</label>
              <input id="discountRange" name="discountRange" type="range" min="0" max="10" step="1" value="0" />
              <output id="discountOutput">0</output>%
            </div>
          </div>

          <div class="row">
            <div class="col">
              <label>Color options</label>
              <div role="radiogroup" aria-labelledby="colorLabel">
                <label><input type="radio" name="color" value="red" required /> Red</label><br/>
                <label><input type="radio" name="color" value="blue" /> Blue</label><br/>
                <label><input type="radio" name="color" value="green" /> Green</label>
              </div>
            </div>

            <div class="col">
              <label for="addNotes">Additional notes</label>
              <textarea id="addNotes" name="addNotes" rows="3" maxlength="300" placeholder="Any special requirements..." autocomplete="off"></textarea>
              <div class="hint">Max 300 characters.</div>
            </div>
          </div>

          <div class="row">
            <div class="col">
              <label for="fileUpload">Upload reference (image)</label>
              <input id="fileUpload" name="fileUpload" type="file" accept="image/*" aria-describedby="fileHint" required />
              <div id="fileHint" class="hint">PNG/JPG/GIF up to 5MB.</div>
            </div>

            <div class="col">
              <label for="agree">Terms</label>
              <div>
                <label><input id="agree" name="agree" type="checkbox" required /> I agree to the terms and conditions</label>
              </div>
            </div>
          </div>
